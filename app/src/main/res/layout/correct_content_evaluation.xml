<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_1"
        android:background="@color/white"
        android:padding="@dimen/margin_size_12">

        <TextView
            android:id="@+id/tv_pinglun_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.5dip"
            android:text="教学活动符合现代教育理念,体现新教材教学方法，教学课程深入浅出，形象生动，精彩有趣，启发引导性强。"
            android:textColor="#6B7181"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pinglun_content1"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="1.5dip"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_pinglun_content1"
            android:layout_marginTop="@dimen/margin_size_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="1.5dip"
                android:text="得分:"
                android:textSize="@dimen/font_size_14" />

            <com.haoyu.app.view.StarBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_8"
                star:isEdit="true"
                star:starDistance="@dimen/margin_size_10"
                star:starEmpty="@drawable/assignment_default_xing"
                star:starFill="@drawable/assignment_press_xing"
                star:starNumber="5"
                star:starSize="@dimen/margin_size_16" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
