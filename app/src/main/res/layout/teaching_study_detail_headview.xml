<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@color/spaceColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/teaching_study_time"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="离活动结束还剩：还有26天13时14分"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_study_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_time"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="思考与讨论：回顾乐高课堂教学念佛低价佛ID是否"
        android:textSize="@dimen/font_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="活动类型:"
            android:textColor="@color/faq_title"
            android:textSize="@dimen/font_size_14" />

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_margin="10dp"
            android:background="@color/spaceColor" />

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="年级学科："
            android:textColor="@color/faq_title"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="授课人："
            android:textColor="@color/faq_title"
            android:textSize="@dimen/font_size_14" />

        <View

            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@color/spaceColor" />

        <TextView
            android:id="@+id/tv_bookversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="选用教材："
            android:textColor="@color/faq_title"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_5"
        android:layout_marginRight="@dimen/margin_size_5"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:focusable="false"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_default" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/teaching_research_play" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/announcements_yuandian"
        android:drawablePadding="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="评课方向"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="福建按双方就怕是佛菩萨反扒十分可怕是富婆爱上佛菩萨开发泼洒卡佛菩萨开发盘搜开发怕是分开拍骚客富婆"
        android:textSize="@dimen/font_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spaceColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spaceColor">

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/feedback"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="已有0条回复" />
    </RelativeLayout>
</LinearLayout>