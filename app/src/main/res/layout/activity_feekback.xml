<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultColor">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignTop="@+id/tv_title"
            android:background="@drawable/app_toolbar_selector"
            android:paddingLeft="@dimen/back_padding"
            android:paddingRight="@dimen/back_padding"
            android:src="@drawable/app_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/title_padding"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/title_textsize" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_problem_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_2"
        android:layout_marginRight="@dimen/margin_size_2"
        android:layout_marginTop="@dimen/margin_size_12"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="输入问题的详细描述"
        android:maxLines="10"
        android:minLines="10"
        android:padding="@dimen/margin_size_16"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/font_size_18">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_20"
        android:layout_marginLeft="@dimen/margin_size_30"
        android:layout_marginRight="@dimen/margin_size_30"
        android:layout_marginTop="@dimen/margin_size_30"
        android:background="@drawable/app_button_selector"
        android:paddingBottom="@dimen/margin_size_12"
        android:paddingTop="@dimen/margin_size_12"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="感谢您提交的反馈信息！"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="您的意见将有助于改进我们的平台。"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>